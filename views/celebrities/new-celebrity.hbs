<h2>Create Celebrity</h2>

<form action="/celebrities/crate" method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" required>

    <label for="occupation" id="occuopation">Occupation:</label>
    <input type="text" id="occupation" name="name" required>

    <label for="catchPhrase">CatchPhrase</label>
    <input type="text" id="catchPhrase" name="catchPhrase" required>

    <button type="submit">Create</button>
</form>

{{#if error}}
<p>{{error.message}}</p>
{{/if}}